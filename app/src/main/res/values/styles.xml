<resources>

    <!-- Base application theme. -->
    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>


    <style name="MyMaterialTheme.Base" parent="MyMaterialTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Button.Theme</item>
        <item name="android:colorButtonNormal">@color/newColor</item>
        <item name="android:startColor">@color/colorPrimary</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#546E7A</item>
        <item name="android:textColorPrimary">#37474F</item>
        <item name="android:background">#B0BEC5</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button.TextButton.Dialog</item>
</style>

    <style name="Widget.Shrine.Toolbar." parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="MyMaterialTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <!--<item name="android:windowBackground">@drawable/background_dialog</item>-->

    </style>
    <style name="Button.Theme" parent="MyMaterialTheme">
        <item name="android:background">@color/newColor</item>
    </style>

    <style name="Widget.MaterialComponents.Button.">
        <item name="buttonBarStyle">@style/Widget.AppCompat.ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/Button.Theme</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
    </style>

    <style name="Fade">
        <item name="android:windowEnterAnimation">@anim/fadein</item>
    </style>

    <style name="ImageButton" parent="Widget.MaterialComponents.Button">
        <item name="android:colorButtonNormal">@color/newColor</item>
    </style>

    <style name="dialog_animation">

        <item name="android:windowEnterAnimation">@anim/slide_left</item>

        <item name="android:windowExitAnimation">@anim/slide_right</item>

    </style>



</resources>
