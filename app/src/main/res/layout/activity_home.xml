<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/bg_41studio">

    <android.support.design.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="Logout"
        android:textSize="14dp"
        app:iconPadding="10dp"
        app:iconSize="18dp"
        app:icon="@drawable/ic_exit_24dp"
        android:textColor="@android:color/white"
        app:iconTint="@android:color/white"
        android:gravity="center"/>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="235dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="56dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:src="@drawable/logo_short"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintLeft_toLeftOf="@id/home"
        app:layout_constraintRight_toRightOf="@id/home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <LinearLayout
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <android.support.design.button.MaterialButton
            android:id="@+id/btn_Visitor"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:fontFamily="@android:rubik-medium"
            android:text="VISITOR"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:icon="@drawable/ic_people_24dp"
            android:paddingStart="20dp"
            android:layout_marginEnd="10dp"
            app:iconTint="@android:color/white"
            android:elevation="3dp"
            />

        <android.support.design.button.MaterialButton
            style="@style/MyMaterialTheme.Base"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:icon ="@drawable/ic_person_24dp"
            android:fontFamily="@android:rubik-medium"
            android:onClick="toEmployee"
            android:paddingStart="20dp"
            android:text="EMPLOYEE"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:iconTint="@android:color/white"
            android:background="@drawable/gradient_bg"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>