<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#fff">

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_logout_24dp"
        android:background="@drawable/bg_logout"
        android:elevation="3dp"/>

    <ImageView
        android:layout_width="280dp"
        android:layout_height="235dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="56dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:src="@drawable/logo_short"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
        app:layout_constraintLeft_toLeftOf="@id/home"
        app:layout_constraintRight_toRightOf="@id/home"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421" />

    <LinearLayout
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <Button
            android:id="@+id/btn_Visitor"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:fontFamily="@android:rubik-medium"
            android:text="VISITOR"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <Button
            android:layout_width="201dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:fontFamily="@android:rubik-medium"
            android:onClick="toEmployee"
            android:text="EMPLOYEE"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>